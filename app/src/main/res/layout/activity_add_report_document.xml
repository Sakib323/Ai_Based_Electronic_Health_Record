<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFFFFFF"
    tools:context=".add_report_document">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="50dp">

            <RelativeLayout
                android:id="@+id/back_btn"
                android:layout_width="70dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/back_button" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="#FCFFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:text="Add Health Record"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_below="@+id/top">

        <AutoCompleteTextView
            android:id="@+id/record_type"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_for_edit_text"
            android:drawableLeft="@drawable/male"
            android:drawablePadding="15dp"
            android:editable="false"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:paddingLeft="15dp"
            android:hint="Record Type"
            android:textColorHint="@color/black" />




        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_for_edit_text"
            android:drawableLeft="@drawable/person"
            android:drawablePadding="15dp"
            android:hint="Note"
            android:textColorHint="@color/black"
            android:fontFamily="sans-serif-condensed"
            android:paddingLeft="15dp" />

        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_for_edit_text"
            android:drawableLeft="@drawable/person"
            android:drawablePadding="15dp"
            android:hint="Document Title/Description"
            android:textColorHint="@color/black"
            android:fontFamily="sans-serif-condensed"
            android:paddingLeft="15dp" />
        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/diseases"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_for_edit_text"
            android:drawableLeft="@drawable/person"
            android:drawablePadding="15dp"
            android:hint="Diseases"
            android:textColorHint="@color/black"
            android:fontFamily="sans-serif-condensed"
            android:paddingLeft="15dp" />


        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/date_of_visit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_for_edit_text"
            android:drawableLeft="@drawable/person"
            android:drawablePadding="15dp"
            android:hint="Date of visit"
            android:textColorHint="@color/black"
            android:fontFamily="sans-serif-condensed"
            android:paddingLeft="15dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Physician Information"
                android:textAlignment="center"
                android:fontFamily="sans-serif-condensed"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/physician_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/background_for_edit_text"
                android:drawableLeft="@drawable/person"
                android:drawablePadding="15dp"
                android:hint="Physician name"
                android:textColorHint="@color/black"
                android:fontFamily="sans-serif-condensed"
                android:paddingLeft="15dp" />

            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/specialization"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/background_for_edit_text"
                android:drawableLeft="@drawable/person"
                android:drawablePadding="15dp"
                android:hint="Specialization"
                android:textColorHint="@color/black"
                android:fontFamily="sans-serif-condensed"
                android:paddingLeft="15dp" />

            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/contact_info"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/background_for_edit_text"
                android:drawableLeft="@drawable/person"
                android:drawablePadding="15dp"
                android:hint="Phone/Email"
                android:textColorHint="@color/black"
                android:fontFamily="sans-serif-condensed"
                android:paddingLeft="15dp" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/background_for_edit_text"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add physician photo"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/black"/>

                <ImageView
                    android:id="@+id/add_dr_img"
                    android:layout_marginLeft="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_image_search_24" />

            </LinearLayout>


        </LinearLayout>








    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/submit"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="right"
        android:layout_marginBottom="30dp"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="NEXT"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>



</RelativeLayout>